@model TenkiAme.Models.WeatherModel
@{
    ViewData["Title"] = "TenkiAme ";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@* <style>
    .container-content {
        display: flex;
        flex-direction: column;
        flex: auto;
    }
</style> *@

@foreach (var day in Model.WeatherDays)
{
    //create div using the container-inner class
    <div class="container-content container-inner .col-1">
        @day.PrintToPage()
        @foreach (var hour in day.WeatherHours)
        {
            <p>@hour.PrintToPage()</p>
        }
    </div>
}