@model TenkiAme.Models.WeatherModel
@{
    ViewData["Title"] = "TenkiAme ";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@foreach (var day in Model.WeatherDays)
{
    //create div using the container-inner class
    <div class="flex flex-col gap-4 md:flex-row">
        <div class="flex wid-full min-w-18r flex-col gap-4 md-half-wid">
            <div class="rounded-xl border bg-card relative flex wid-full flex-col justify-between overflow-hidden">
                <div>
                    <div class="flex justify-between items-center p-4">
                        <span>@day.GetFormattedCalendarDate()</span>
                    </div>
                    <div class="flex justify-between items-center p-4">
                        <span>Min:@day.GetMinTemperature()</span>
                        <span>Max:@day.GetMaxTemperature()</span>
                    </div>
                </div>
                <span>@day.PrintToPage()</span>
                @foreach (var hour in day.WeatherHours)
                {
                    <span>@hour.PrintToPage()</span>
                }
            </div>
        </div>
    </div>
}